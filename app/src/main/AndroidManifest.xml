<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.suhanshu.slambook">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddnewSlam"
            android:label="Add Slam"
            android:parentActivityName=".FirstActivity" />
        <activity android:name=".login.Signin">
        </activity>
        <activity android:name=".login.RegisterActivity" />
        <activity
            android:name=".FirstActivity"
            android:label="Home" />
        <activity
            android:name=".View_Slam"
            android:label="View Slam"
            android:parentActivityName=".FirstActivity" />
        <activity
            android:name=".DetailActivity"
            android:label="Read Slam"
            android:parentActivityName=".View_Slam" />
        <activity android:name=".SplashActivity"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>